@model iMedicalMVC.ViewModel.Employee.CreateDoctorViewModel

@{
    ViewBag.Title = "AddNewDoctor";
    Layout = "~/Views/Shared/_AdministrationrLayout.cshtml";
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" style="margin-top: 150px">
        <h1 class="well">Dodaj dane szczegółowe lekarza</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">

                        <div class="row">
                            <h3 style="padding: 20px 20px;"><strong>Dane szczegółowe</strong></h3>
                            <div class="col-sm-6 form-group">
                                <label>Pracownik</label>
                                @Html.DropDownListFor(model => model.EmployeeListId, Model.EmployeeList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.EmployeeListId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Tytuł naukowy</label>
                                @Html.DropDownListFor(model => model.TitleTypeListId, Model.TitleTypeList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.TitleTypeListId, "", new { @class = "text-danger" })
                            </div>
                                <div class="col-sm-6 form-group">
                                    <label>Numer PWZ</label>
                                    @Html.EditorFor(model => model.PWZ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PWZ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Numer Certyfikatu</label>
                                    @Html.EditorFor(model => model.CertificateNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CertificateNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Adres e-mail</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Telefon</label>
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <button type="submit" class="btn btn-lg btn-info">Zapisz</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
}










