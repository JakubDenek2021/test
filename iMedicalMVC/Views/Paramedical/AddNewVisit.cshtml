@model iMedicalMVC.ViewModel.Employee.CreateNewVistViewModel

@{
    ViewBag.Title = "AddNewVisit";
    Layout = "~/Views/Shared/_ParamedicalLayout .cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top: 150px">
        <h1 class="well">Zarejestruj nową wizytę</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Pacjent</label>
                                @Html.DropDownListFor(model => model.PatientListId, Model.PatientList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.PatientListId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Lekarz</label>
                                @Html.DropDownListFor(model => model.EmployeeListId, Model.EmployeeList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.EmployeeListId, "", new { @class = "text-danger" })
                            </div>
                            <h3 style="padding: 20px 20px;"><strong>Dane szczegółowe</strong></h3>
                            <div class="col-sm-6 form-group">

                                <label>Rodzaj wizyty</label>
                                @Html.DropDownListFor(model => model.VisitTypeListId, Model.VisitTypeList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.VisitTypeListId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Informacje o stanie zdrowia</label>
                                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Termin</label>
                                @Html.EditorFor(model => model.DateHourVisitStart, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateHourVisitStart, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Komentarz do wizyty</label>
                                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>

                </form>

            </div>
            <button type="submit" class="btn btn-lg btn-info">Zapisz</button>
        </div>

    </div>


}


