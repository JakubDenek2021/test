@model iMedicalMVC.ViewModel.Employee.CreateMedicalExaminationViewModel

@{
    ViewBag.Title = "AddNewMedicalExamination";
    Layout = "~/Views/Shared/_ParamedicalLayout .cshtml";
}


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top: 150px">
        <h1 class="well">Zarejestruj nowe badanie</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Pacjent</label>
                                @Html.DropDownListFor(model => model.PatientListId, Model.PatientList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.PatientListId, "", new { @class = "text-danger" })
                            </div>
                            <h3 style="padding: 20px 20px;"><strong>Dane szczegółowe</strong></h3>
                            <div class="col-sm-6 form-group">
                                <label>Rodzaj badania</label>
                                @Html.DropDownListFor(model => model.MedicalExaminationListId, Model.MedicalExaminationList, new { @class = "form-control input_text" })
                                @Html.ValidationMessageFor(model => model.MedicalExaminationListId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">

                                <label>Numer skierowania - jeżeli dotyczy</label>
                                @Html.EditorFor(model => model.NumberReferral, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumberReferral, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Data zarejestrowania</label>
                                @Html.EditorFor(model => model.IssueDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })

                            </div>
                            
                        </div>

                    </div>

                </form>

            </div>
            <button type="submit" class="btn btn-lg btn-info">Zapisz</button>
        </div>

    </div>
}

